{
  "name": "explainable",
  "version": "0.1.0",
  "description": "Explain why your configuration behaves the way it does",
  "keywords": [
    "config",
    "configuration",
    "explain",
    "debug",
    "typescript",
    "explainable",
    "decision-tracking",
    "env",
    "dotenv"
  ],
  "author": "T. Pliakas <thodoris.pliakas@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tpliakas/explainable.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "svg-images",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "DIAGRAMS.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "example:basic": "tsx examples/basic-config/index.ts",
    "example:env": "tsx examples/env-adapter/index.ts",
    "example:tsconfig": "tsx examples/tsconfig-adapter/index.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

